<%= f.cms_text_field :name %>

<label>Moderate Comments</label> <%= f.check_box :moderate_comments %>


<div class="checkbox_group fields">
  <p><label>Permissions</label></p>
  <%= hidden_field_tag "blog[group_ids][]", "", :id => nil %>
  <div class="checkboxes"  style="float: left; width: 100%">
    <% for group in Cms::Group.cms_access.all.order('cms_groups.name') %>
    <p class="checkbox_fields">
      <label for="cms_group_ids_<%= group.id %>"><%= group.name %></label>
        <%= check_box_tag "blog[group_ids][]", group.id,
            @block.groups.include?(group),
            :class => "cms_group_ids",
            :id => "cms_group_ids_#{group.id}",
            :tabindex => next_tabindex
        %>
    </p>
    <% end %>
    <p>
    <div class="help-block">Which &ldquo;CMS&rdquo; groups can edit and publish the blog?</div>
    </p>
    <div class="check_uncheck">
      <%= link_to_check_all 'input.cms_group_ids' %>,
      <%= link_to_uncheck_all 'input.cms_group_ids' %>
    </div>
  </div>
</div>
<br clear="all" />

<%= f.text_area :template, :value => BcmsBlog::Blog.default_template %>

<div class="help-block" style="float:none">
  Saving your blog might take a couple of seconds while everything is set up.
</div>  
