<%
	logger.warn "Page title is: #{page_title}"
	page_title "SOMETHING ELSE"
	logger.warn "Now it's #{page_title}"
%>
<% use_page_title @blog_post.name %>
<%= render :partial => "bcms_blog/partials/blog_post", :object => @blog_post %>

<p class="blog_comment_form">
  <%= cms_form_for @blog_comment, :url => cms.portlet_handler_path(:id=>@portlet.id, :handler=>'create_comment') do |f| %>

    <%= f.hidden_field :post_id %>
    <%= f.cms_error_messages %>
    <p class="fields text_fields">
      <%= f.label :author, 'Name *' %>
      <%= f.text_field :author %>
    </p>
    <p class="fields text_fields">
      <%= f.label :email, 'E-mail address' %>
      <%= f.text_field :email %>
    </p>
    <p class="fields text_fields">
      <%= f.label :url, 'Web site' %>
      <%= f.text_field :url %>
    </p>
    <p class="fields text_editor_fields">
      <%= f.label :body, 'Body *' %>
      <br/>
      <%= f.text_area :body, :size => "50x5", :style => 'height: auto'  %>
    </p>
    <p class="buttons clear">
      <%= submit_tag "Submit comment" %>
    </p>
  <% end %>
</p>
